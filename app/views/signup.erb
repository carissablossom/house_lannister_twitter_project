<div class="container">
  <h1>Create your account!</h1>
  <%= @error %>
   <form action="/signup" method="post">
    <input name="user[username]" placeholder="Username" />
    <input name="user[email]" placeholder="Email" />
    <input name="user[first_name]" placeholder="First Name" />
    <input name="user[last_name]" placeholder="Last Name" />
    <input type="password" name="user[password_hash]" placeholder="Password" />
    <input type="password" name="password_hash_verify" placeholder="Verify Password" />
    <input type="submit" value="Sign up" />
  </form>
</div>
